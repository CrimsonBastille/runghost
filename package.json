{
    "name": "@nebulaglitch/runghost",
    "version": "0.0.1",
    "description": "A dashboard to monitor multiple GitHub identities from a single interface",
    "main": "dist/index.js",
    "bin": {
        "runghost": "dist/cli.js"
    },
    "packageManager": "pnpm@10.12.4",
    "scripts": {
        "start": "next start -p 4000",
        "dev": "next dev -p 4000",
        "build": "next build && tsc --project tsconfig.cli.json",
        "postbuild": "chmod +x dist/cli.js",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src/**/*.{ts,tsx}",
        "clean": "rm -rf .next dist coverage",
        "prepare": "npm run build"
    },
    "keywords": [
        "github",
        "dashboard",
        "monitoring",
        "cli",
        "nextjs"
    ],
    "author": "NebulaGlitch",
    "license": "MIT",
    "dependencies": {
        "@libsql/client": "^0.4.0",
        "@octokit/rest": "^22.0.0",
        "@tanstack/react-table": "^8.21.3",
        "@theunwalked/cardigantime": "^0.0.14",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "commander": "^14.0.0",
        "d3": "^7.8.5",
        "date-fns": "^4.1.0",
        "fs-extra": "^11.1.1",
        "lucide-react": "^0.525.0",
        "next": "^15.3.5",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "recharts": "^3.0.2",
        "server-only": "^0.0.1",
        "tailwind-merge": "^3.3.1",
        "yaml": "^2.3.4",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/d3": "^7.4.3",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^24.0.10",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "@vitest/coverage-v8": "^0.34.0",
        "autoprefixer": "^10.4.0",
        "eslint": "^8.52.0",
        "eslint-config-next": "^14.0.0",
        "postcss": "^8.4.0",
        "tailwindcss": "^3.3.0",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.2.0",
        "vitest": "^0.34.0"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/nebulaglitch/runghost.git"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}